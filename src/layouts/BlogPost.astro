---
import Layout from './Layout.astro';
import AuthorCard from '../components/AuthorCard.astro';
import { type CollectionEntry } from 'astro:content';
import { getAuthor } from '../data/authors';
import { useTranslations, formatDate } from '../i18n/utils';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, author, pubDate, heroImage, tags, language } = post.data;
const authorData = getAuthor(author);
const t = useTranslations(language);

const formattedDate = formatDate(pubDate, language);
---

<Layout title={title} description={description} image={heroImage} article={true}>
  <article class="post">
    {heroImage && (
      <div class="hero-image">
        <img src={heroImage} alt={title} />
      </div>
    )}
    
    <header class="post-header content">
      <h1>{title}</h1>
      
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      
      {tags && tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
      
      <AuthorCard 
        name={authorData?.name}
        bio={authorData?.bio}
        avatar={authorData?.avatar}
        fallbackName={author}
      />
    </header>
    
    <div class="post-content content">
      <slot />
    </div>
    
    <footer class="post-footer content">
      <a href={language === 'en' ? '/' : '/es/'} class="back-link">{t('post.backToHome')}</a>
    </footer>
  </article>
</Layout>

<style>
  .post {
    max-width: 100%;
  }
  
  .hero-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
    margin-bottom: 2rem;
    border-radius: 12px;
  }
  
  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .post-header {
    margin-bottom: 3rem;
  }
  
  .post-header h1 {
    margin-bottom: 1rem;
    font-size: 2.5rem;
    line-height: 1.2;
  }
  
  .post-meta {
    color: var(--color-text-light);
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }
  
  .separator {
    margin: 0 0.5rem;
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .tag {
    background: var(--color-bg-light);
    color: var(--color-text-light);
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.875rem;
  }
  
  .post-content {
    font-size: 1.125rem;
    line-height: 1.8;
  }
  
  .post-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .post-content :global(img) {
    margin: 2rem auto;
    border-radius: 8px;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: var(--color-text-light);
  }
  
  .post-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }
  
  .back-link {
    color: var(--color-primary);
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2rem;
    }
    
    .post-content {
      font-size: 1rem;
    }
  }
</style>
