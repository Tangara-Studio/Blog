---
interface Props {
  language?: 'en' | 'es';
}

const { language = 'es' } = Astro.props;

const content = {
  es: {
    title: 'Mantente actualizado',
    description: 'Recibe las últimas noticias y devlogs directamente en tu inbox.',
    placeholder: 'tu@email.com',
    button: 'Suscribirse'
  },
  en: {
    title: 'Stay updated',
    description: 'Get the latest news and devlogs directly in your inbox.',
    placeholder: 'your@email.com',
    button: 'Subscribe'
  }
};

const t = content[language];
---

<aside class="post-footer-newsletter">
  <h3>{t.title}</h3>
  <p>{t.description}</p>
  <form class="newsletter-form">
    <input type="email" placeholder={t.placeholder} required />
    <button type="submit">{t.button}</button>
  </form>
  <small>Próximamente disponible</small>
</aside>

<style>
  .post-footer-newsletter {
    margin-top: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-primary-light), var(--color-primary));
    border-radius: 12px;
    text-align: center;
    color: white;
  }

  .post-footer-newsletter h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .post-footer-newsletter p {
    margin: 0 0 1.5rem 0;
    opacity: 0.95;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    max-width: 400px;
    margin: 0 auto 0.5rem auto;
  }

  .newsletter-form input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
  }

  .newsletter-form button {
    padding: 0.75rem 1.5rem;
    background: var(--color-text);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .newsletter-form button:hover {
    opacity: 0.9;
  }

  small {
    opacity: 0.8;
    font-size: 0.75rem;
  }
</style>
