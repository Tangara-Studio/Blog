---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section footer-brand">
        <img src="/images/logos/logo-horizontal.png" alt="Tangara Studio" class="footer-logo" />
        <p>We mix the perfect synergy of Art with Engineering</p>
      </div>
      
      <div class="footer-section">
        <h4>{t('footer.links')}</h4>
        <ul>
          <li><a href="/">{t('nav.blog')}</a></li>
          <li><a href="https://tangara.studio" target="_blank" rel="noopener">{t('footer.mainWeb')}</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>{t('footer.follow')}</h4>
        <ul class="social-links">
          <li><a href="https://x.com/TangaraStudio" target="_blank" rel="noopener">Twitter/X</a></li>
          <li><a href="https://discord.gg/HT5Vwm8eYu" target="_blank" rel="noopener">Discord</a></li>
          <li><a href="https://www.youtube.com/@TangaraStudio" target="_blank" rel="noopener">YouTube</a></li>
          <li><a href="https://www.instagram.com/tangara.studio/" target="_blank" rel="noopener">Instagram</a></li>
          <li><a href="https://www.linkedin.com/company/tangara-studio/" target="_blank" rel="noopener">LinkedIn</a></li>
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Tangara Studio. {t('footer.allRightsReserved')}.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-bg-light);
    border-top: 1px solid var(--color-border);
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-logo {
    height: 80px;
    align-self: flex-start;
    width: auto;
    object-fit: contain;
    max-width: 100%;
  }
  
  .footer-section h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }
  
  .footer-section h4 {
    margin-top: 0;
    margin-bottom: 0.75rem;
    font-size: 1rem;
  }
  
  .footer-section p {
    color: var(--color-text-light);
    margin: 0;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section li {
    margin-bottom: 0.5rem;
  }
  
  .footer-section a {
    color: var(--color-text-light);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer-section a:hover {
    color: var(--color-primary);
  }
  
  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    color: var(--color-text-light);
    font-size: 0.875rem;
  }
  
  .footer-bottom p {
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
